{
    "name": "Hello Extensions",
    "description": "Base Level Extension",
    "version": "1.0",
    "permissions": [
        "storage",
        "activeTab",
        "tabs", "<all_urls>"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "hello_extensions.png"
    },
    "background": {
        "scripts": [
            "script.js"
        ],
        "persistent": true
    },
    "manifest_version": 2,
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Opens hello.html"
        }
    }
}